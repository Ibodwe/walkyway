<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.walkway">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".walkwaywalking.FinishWalkwayActivity"></activity>
        <activity android:name=".walkwaywalking.StopWalkwayActivity" />
        <activity android:name=".walkwaywalking.StartWalkwayActivity" />

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="3278e1057237737ede6f7b53202294a5" />

        <activity android:name=".SignUpActivity" />
        <activity android:name=".map.MainMapActivity" />
        <activity android:name=".signup.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>