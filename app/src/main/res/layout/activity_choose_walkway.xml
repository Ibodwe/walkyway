<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="55dp"
    android:background="@drawable/checkwaycolor">


    <ImageView
        android:id="@+id/ProfileImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/walkway_distance"
        app:layout_constraintTop_toBottomOf="@+id/WalkwayName" />

    <ImageView
        android:id="@+id/WalkwayImage"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="44dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/hanChooseBtn"
        app:layout_constraintEnd_toEndOf="@+id/hanChooseBtn"
        app:layout_constraintStart_toStartOf="@+id/hanChooseBtn"
        app:layout_constraintTop_toBottomOf="@+id/WalkwayReviewView" />

    <TextView
        app:layout_goneMarginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/WalkwayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:text="산책로 이름"
        android:textColor="#000000"
        android:textSize="15dp"
         />

    <TextView
        android:id="@+id/DurationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="소요시간: "
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/RatingView"
        app:layout_constraintTop_toBottomOf="@+id/walkway_distance" />

    <TextView
        android:id="@+id/RatingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="별점: "
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DurationView" />

    <TextView
        android:id="@+id/WalkwayReviewView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:text="한줄평: "
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/RatingView"
        app:layout_constraintTop_toBottomOf="@+id/RatingView" />

    <Button
        android:id="@+id/hanChooseBtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:background="#61B536"
        android:gravity="center"
        android:text="선택하기"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/walkway_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:text="거리"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/RatingView"
        app:layout_constraintTop_toBottomOf="@+id/ProfileImage" />


</androidx.constraintlayout.widget.ConstraintLayout>